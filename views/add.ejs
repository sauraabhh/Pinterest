<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-700 text-white px-10 py-5">
        <h1 class="text-xl ">Create A New Post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block text-black w-1/3 px-3 py-2 " type="file" name="postimage">
            <input class="block text-black w-1/3 px-3 py-2 border-2 mt-2 rounder-md" type="text" name="title" placeholder="Title">
            <textarea class="block text-black w-1/3 h-40 px-3 py-2 border-2 mt-2 rounder-md" type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-2 bg-red-600 mt-2 rounder-md" type="submit" value="Create Post">
        </form>
    </div>
